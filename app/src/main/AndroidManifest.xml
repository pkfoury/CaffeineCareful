<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.peter.caffeinecareful">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivityBasic"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MorningActivity"
            android:parentActivityName=".MainActivityBasic"
            android:label="@string/title_activity_morning"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AfternoonActivity"
            android:label="@string/title_activity_afternoon"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EveningActivity"
            android:label="@string/title_activity_evening"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>
    </application>

</manifest>