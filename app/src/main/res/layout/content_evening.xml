<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_evening"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.peter.caffeinecareful.EveningActivity"
    tools:showIn="@layout/activity_evening">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true">

        <TextView
            android:text="How much caffiene \nhave you had?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:id="@+id/textView12"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/seekBar4" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="2"
            android:progress="1"
            android:id="@+id/seekBar13"
            android:layout_marginTop="16dp" />

        <TextView
            android:text="Some"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar4"
            android:layout_centerHorizontal="false"
            android:id="@+id/textView21"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="In how many hours \nwill you sleep?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar4"
            android:layout_alignStart="@+id/seekBar4"
            android:layout_marginTop="32dp"
            android:id="@+id/textView13"
            android:textSize="30sp" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3"
            android:id="@+id/seekBar14"
            android:layout_marginTop="16dp" />

        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar9"
            android:layout_alignEnd="@+id/textView21"
            android:id="@+id/textView22"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

</RelativeLayout>
